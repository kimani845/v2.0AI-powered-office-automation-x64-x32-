<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" loadImage="OnLoadImage">
    <ribbon>
        <tabs>
            <tab id="ai_assistant_tab" getLabel="GetTabLabel">
                <group id="ai_tools_group" getLabel="GetGroupLabel">
                    <button id="run_prompt_button"
                            getLabel="GetRunPromptLabel"
                            size="large"
                            onAction="OnRunPrompt"
                            image="ai_icon" />
                    <separator id="sep1" />
                    <button id="create_memo_button"
                            getLabel="GetCreateMemoLabel"
                            size="normal"
                            onAction="OnCreateMemo"
                            image="memo_icon" />
                    <button id="create_minutes_button"
                            getLabel="GetCreateMinutesLabel"
                            size="normal"
                            onAction="OnCreateMinutes"
                            image="minutes_icon" />
                    <button id="create_cover_letter_button"
                            getLabel="GetCreateCoverLetterLabel"
                            size="normal"
                            onAction="OnCreateCoverLetter"
                            image="cover_letter_icon" />
                    <separator id="sep2" />
                    <button id="analyze_doc_button"
                            getLabel="GetAnalyzeDocLabel"
                            size="normal"
                            onAction="OnAnalyzeDocument"
                            image="analyze_icon" />
                    <button id="summarize_doc_button"
                            getLabel="GetSummarizeDocLabel"
                            size="normal"
                            onAction="OnSummarizeDocument"
                            image="summarize_icon" />
                </group>
            </tab>
        </tabs>
    </ribbon>
</customUI>